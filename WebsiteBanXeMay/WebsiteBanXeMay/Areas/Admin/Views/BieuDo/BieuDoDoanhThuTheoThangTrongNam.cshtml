
@{
    ViewBag.Title = "BieuDoDoanhThuTheoThangTrongNam";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@{var lstYear = ViewBag.lstYear as IEnumerable<int>;}
<div class="">
    @*content-wrapper*@
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Doanh thu
        </h1>
        <ol class="breadcrumb">
            <li><i class="fa fa-dashboard"></i> Biểu đồ</li>
            <li class="active">Doanh thu</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">
                        <form action="/Admin/BieuDo/BieuDoDoanhThuTheoThangTrongNam" method="get">
                            <div class="row">
                                <div class="col-md-2 mt">
                                    <label>Năm</label>
                                    <select class="form-control select2" name="Nam" style="width: 100%;">
                                        @foreach (var Year in lstYear)
                                        {
                                            <option value="@Year">@Year</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-1" style="margin-top:2.3%">
                                    <button title="Tìm kiếm" class="btn btn-info"><i class="fa fa-search"></i></button>
                                </div>
                            </div>

                        </form>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div id="chartContainer" style="height: 370px; width: 100%; margin-top:2%"></div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>


<script>
window.onload = function () {

var chart = new CanvasJS.Chart("chartContainer", {
	animationEnabled: true,
	theme: "light2", // "light1", "dark1", "dark2"
	exportEnabled: true,
	title: {
		text: "Doanh thu từng tháng trong năm " + @ViewBag.year
	},
	data: [{
        type: "column",
        //indexLabel: "{y} VND",
		dataPoints:  @Html.Raw(ViewBag.lstDoanhThuTheoThangTrongNam)
	}]
});
chart.render();

}
</script>
