@using WebsiteBanXeMay.Models;
@using WebsiteBanXeMay.ViewModels;
@using WebsiteBanXeMay.Areas.Admin.ViewModels;

@model LOAISANPHAM

@{ var lstThuongHieu = ViewBag.lstThuongHieu as IEnumerable<THUONGHIEU>;
    var lstKieuLoaiSanPham = ViewBag.lstKieuLoaiSanPham as IEnumerable<KieuSanPhamViewModel>;
    var lstNhaCungCap = ViewBag.lstNhaCungCap as IEnumerable<NHACUNGCAP>;
    var lstTrangThaiLoaiSanPham = ViewBag.lstTrangThaiLoaiSanPham as IEnumerable<TrangThaiLoaiSanPhamViewModel>;}

<style>
    .mt {
        margin-top: 1% !important
    }
</style>
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">Hiệu chỉnh loại sản phẩm mã: @Model.MALOAI </h4>
</div>
<div class="modal-body">
    <form name="SuaLoaiSanPham_Form" enctype="multipart/form-data">
        @*@Html.AntiForgeryToken()*@
        <div class="row">
            <input id="MALOAI" value="@Model.MALOAI" type="hidden">
            <div class="col-md-6">
                <label>Thương hiệu<span class="required">*</span></label>
                <select class="form-control select2" id="MATH" style="width: 100%;">
                    @foreach (var ThuongHieu in lstThuongHieu)
                    {
                        <option @(ThuongHieu.MATH == Model.MATH ? "selected" : null) value="@ThuongHieu.MATH">@ThuongHieu.TENTH</option>
                    }
                </select>
            </div>
            <div class="col-md-6">
                <label>Nhà cung cấp<span class="required">*</span></label>
                <select class="form-control select2" id="MANCC" style="width: 100%;">
                    @foreach (var NhaCungCap in lstNhaCungCap)
                    {
                        <option @(NhaCungCap.MANCC == Model.MANCC ? "selected" : null) value="@NhaCungCap.MANCC" title="@NhaCungCap.TENNCC">@NhaCungCap.TENNCC</option>
                    }
                </select>
            </div>
            <div class="col-md-6 mt">
                <label>Loại<span class="required">*</span></label>
                <select class="form-control select2" id="LOAI" style="width: 100%;">
                    @foreach (var Kieu in lstKieuLoaiSanPham)
                    {
                        <option @(Kieu.MAKIEU == Model.LOAI ? "selected" : null) value="@Kieu.MAKIEU">@Kieu.TENKIEU</option>
                    }
                </select>
            </div>
            <div class="col-md-6 mt">
                <label>Trạng thái<span class="required">*</span></label>
                <select class="form-control select2" id="TRANGTHAI" style="width: 100%;">
                    @foreach (var TrangThai in lstTrangThaiLoaiSanPham)
                    {
                        <option @(TrangThai.MATT == Model.TRANGTHAI ? "selected" : null) value="@TrangThai.MATT">@TrangThai.TENTT</option>
                    }
                </select>
            </div>
            <div class="col-md-6 mt">
                <label>Tên loại sản phẩm<span class="required">*</span></label>
                <input placeholder="Tên loại sản phẩm" id="TENLOAI" class="form-control" value="@Model.TENLOAI" type="text">
            </div>
            <div class="col-md-6 mt">
                <label>Giá<span class="required">*</span></label>
                <input placeholder="Giá" id="GIA" class="form-control" value="@Model.GIA"  type="number">
            </div>
            <div class="col-md-12 mt">
                <label>Mô tả</label>
                <textarea class="form-control" id="MOTA" rows="15">@Model.MOTA</textarea>
            </div>
            <div class="col-md-6 mt">
                <label>Hình ảnh<span class="required">*</span></label>
                <input type="file" id="HINHANH" class="form-control" />
            </div>
        </div>

    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-danger pull-right" data-dismiss="modal"><i class="fa fa-close" title="Đóng"></i></button>
    <button type="button" class="btn btn-success" onclick="SuaLoaiSanPham()" style="margin-right:3%!important"><i class="fa fa-save" title="Lưu"></i></button>
</div>





