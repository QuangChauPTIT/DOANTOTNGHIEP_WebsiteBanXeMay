@using WebsiteBanXeMay.Models
@model IEnumerable<LOAISANPHAM>

<div class="modal-header">
    <button type="button" class="close" onclick="HuyNhapHang()" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">Phiếu nhập có mã nhà cung cấp: @ViewBag.MANCC</h4>
    <div class="row">
        <div class="col-md-4">
            <label>Ngày lập<span class="required">*</span></label>
            <input type="datetime-local" id="NgayNhapID" class="form-control" />
        </div>
    </div>
</div>
@if (Model.Count() > 0)
{
    <div class="modal-body">
        <form name="ThemChiTietPhieuNhapTamThoi_Form">
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-md-8">
                    <label>Loại sản phẩm<span class="required">*</span></label>
                    <select class="form-control select2" name="MALOAI" style="width: 100%;">
                        @foreach (var LoaiSanPham in Model)
                        {
                            <option value="@LoaiSanPham.MALOAI">Mã loại: @LoaiSanPham.MALOAI - Tên loại: @LoaiSanPham.TENLOAI</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label>Giá<span class="required">*</span></label>
                    <input placeholder="Giá" name="GIA" class="form-control" value="" type="number">
                </div>
                <div class="col-md-6">
                    <label>Số khung<span class="required">*</span></label>
                    <input placeholder="Số khung" name="SOKHUNG" class="form-control" value="" type="text">
                </div>
                <div class="col-md-6">
                    <label>Số máy<span class="required">*</span></label>
                    <input placeholder="Số máy" name="SOMAY" class="form-control" value="" type="text">
                </div>
            </div>
        </form>
        <div style="margin-top:2%">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Chi tiết phiếu nhập</h3>
                    <button title="Thêm vào danh sách tạm" class="btn btn-warning" style="float:right!important" onclick="ThemChiTietPhieuNhapTamThoi()"><i class="fa fa-pencil"></i></button>
                </div>
                <!-- /.box-header -->
                <div class="box-body" style="overflow-y:auto!important;max-height:300px!important">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th style="width:15%">Mã loại</th>
                                <th>Tên loại</th>
                                <th>Số khung</th>
                                <th>Số máy</th>
                                <th style="width:15%">Giá</th>
                                <th style="width:10%">Tác vụ</th>
                            </tr>
                        </thead>
                        <tbody id="ChiTietPhieuNhap_DetailTable">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger pull-right" onclick="HuyNhapHang()"><i class="fa fa-close" title="Hủy"></i></button>
        <button type="button" class="btn btn-success" style="margin-right:3%!important" onclick="ThemChiTietPhieuNhap_ThuCong()"><i class="fa fa-save" title="Lưu"></i></button>
    </div>
}
else
{
    <span>Không có dữ liệu</span>
}
<script>
    (function ($) {
        var now = new Date();
        now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
        var date = now.toISOString().slice(0, 16);
        $('#NgayNhapID').val(date)
        $('#NgayNhapID').attr("max", date)
    })(jQuery);
</script>
