@using WebsiteBanXeMay.Utils
@model PageUtil
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div style="height:100%">
    @*content-wrapper*@
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Nhập hàng
        </h1>
        <ol class="breadcrumb">
            <li><i class="fa fa-dashboard"></i> Danh mục</li>
            <li class="active"> Nhập hàng</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">Danh sách phiếu nhập</h3>

                        <button title="Nhập hàng" class="btn btn-primary" style="float:right!important" onclick="getNhaCungCap()"><i class="fa fa-save"></i></button>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="tableIDTH" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Mã phiếu nhập</th>
                                    <th>Mã nhân viên</th>
                                    <th>Họ tên nhân viên</th>
                                    <th>Ngày lập</th>
                                    <th>Tác vụ</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Data.Count() > 0)
                                {
                                    foreach (var PhieuNhapViewModel in Model.PaginatedResult())
                                    {
                                        <tr>
                                            <td>@PhieuNhapViewModel.MAPN</td>

                                            <td>
                                                @PhieuNhapViewModel.MANV
                                            </td>
                                            <td>
                                                @(PhieuNhapViewModel.HO + " " + PhieuNhapViewModel.TEN)
                                            </td>
                                            <td>
                                                @PhieuNhapViewModel.NGAYLAP.ToString("dd/MM/yyyy hh:mm tt")
                                            </td>
                                            <td>
                                                <button title="Xem chi tiết" onclick="getChiTietPhieuNhap('@PhieuNhapViewModel.MAPN')" class="btn btn-warning"><i class="fa fa-info"></i></button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center"><span>Không có dữ liệu</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="box-footer clearfix">
                        <ul class="pagination pagination-sm no-margin pull-right">
                            <li>
                                @Html.ActionLink("Trước", "Index", new { Trang = Model.CurrentPage > 1 ? Model.CurrentPage - 1 : 1 }, null)
                            </li>
                            @for (int page = 1; page <= Model.PageCount(); page++)
                            {
                                <li class="@(page == Model.CurrentPage ? "active" : null)">
                                    @Html.ActionLink(page.ToString(), "Index", new { Trang = page }, null)
                                </li>
                            }
                            <li>
                                @Html.ActionLink("Sau", "Index", new { Trang = Model.CurrentPage < Model.PageCount() ? Model.CurrentPage + 1 : Model.PageCount() }, null)
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </section>
</div>

<div class="modal fade" id="PhieuNhapModal" role="dialog" aria-labelledby="PhieuNhapModalLable" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" id="PhieuNhapModalBody">

        </div>
    </div>
</div>
<div class="modal fade" id="NhaCungCapModal" role="dialog" aria-labelledby="NhaCungCapModalLable" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" id="NhaCungCapModalBody">

        </div>
    </div>
</div>

<div class="modal fade" id="ThemChiTietPhieuNhap_Modal" role="dialog" aria-labelledby="ThemChiTietPhieuNhap_ModalLable" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" id="ThemChiTietPhieuNhap_ModalBody">

        </div>
    </div>
</div>


<div class="modal fade" id="ImportExcel_Modal" role="dialog" aria-labelledby="ImportExcel_ModalLable" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" id="ImportExcel_ModalBody">

        </div>
    </div>
</div>
<script>
    // modal Xem chi tiết phiếu nhập
    function getChiTietPhieuNhap(MaPN) {
        $.ajax({
            type: "GET",
            url: "/Admin/PhieuNhap/ChiTietPhieuNhapPartial?MaPN=" + MaPN,
            success: function (res) {
                $("#PhieuNhapModalBody").html(res);
                $("#PhieuNhapModal").modal('show')
            }
        })
    };

    //Modal chọn nhà cung cấp để nhập hàng - thủ công
    function getNhaCungCap() {
        $.ajax({
            type: "GET",
            url: "/Admin/PhieuNhap/NhaCungCapPartial",
            success: function (res) {
                $("#NhaCungCapModalBody").html(res);
                $("#NhaCungCapModal").modal('show')
            }
        })
    };

    // modal thêm chi tiết phiếu nhập  - thủ công
    function getThemChiTietPhieuNhapTamThoi(MaNCC) {
        $.ajax({
            type: "GET",
            url: "/Admin/PhieuNhap/ThemChiTietPhieuNhapTamThoiPartial?MaNCC=" + MaNCC,
            success: function (res) {
                $("#ThemChiTietPhieuNhap_ModalBody").html(res);
                $("#ThemChiTietPhieuNhap_Modal").modal('show')
            }
        })
    };

    // modal thêm chi tiết phiếu nhập  - import excel
    function getImportExcel(MaNCC, MaPD) {
        $.ajax({
            type: "GET",
            url: "/Admin/PhieuNhap/ImportExcelPartial?MaNCC=" + MaNCC + "&MaPD=" + MaPD,
            success: function (res) {
                $("#ImportExcel_ModalBody").html(res);
                $("#ImportExcel_Modal").modal('show')
            }
        })
    };

    //Đóng modal thêm chi tiết
    function HuyNhapHang() {
        Swal.fire({
            title: 'Xác nhận hủy chi tiết phiếu nhập?',
            text: "Khi bấm xác nhận dữ liệu không vi phạm điều kiện sẽ được hủy!",
            icon: 'question',
            customClass: 'swal-wide',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            cancelButtonText: 'hủy',
            confirmButtonText: 'Xác nhận',
            allowOutsideClick: false
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    type: "GET",
                    url: "/Admin/PhieuNhap/XoaTatCaChiTietPhieuNhapTamThoi",
                    success: function (res) {
                        Swal.fire({
                            title: 'Thành công!',
                            text: res.title,
                            icon: 'success',
                            customClass: 'swal-wide',
                        }).then((d) => {
                            if (d.isConfirmed) {
                                $("#ThemChiTietPhieuNhap_Modal").modal('hide');
                                $("#ImportExcel_Modal").modal('hide')
                            }
                        });
                    }
                })
            }
        })
    }


    // Xử lý mảng tạm
    function ThemChiTietPhieuNhapTamThoi() {
        var form = $('form[name="ThemChiTietPhieuNhapTamThoi_Form"]');

        form.validate();
        if (!form.valid()) {
            return;
        }
        else {
            var data = form.serialize();
            $.ajax({
                type: "POST",
                url: "/Admin/PhieuNhap/ThemChiTietPhieuNhapTamThoi",
                data: data,
                dataType: "json",
                success: function (res) {
                    if (res.error == false) {
                        Swal.fire({
                            title: 'Thành công',
                            text: res.title,
                            icon: 'success',
                            customClass: 'swal-wide',
                        })
                    }
                    else {
                        Swal.fire({
                            title: 'Lỗi!',
                            text: res.title,
                            icon: 'error',
                            customClass: 'swal-wide',
                        })
                    }
                    var html = '';
                    $.each(res.list, function (key, item) {
                        html += '<tr>';
                        html += '<td>' + (key + 1) + '</td>';
                        html += '<td>' + item.MALOAI + '</td>';
                        html += '<td>' + item.TENLOAI + '</td>';
                        html += '<td>' + item.SOKHUNG + '</td>';
                        html += '<td>' + item.SOMAY + '</td>';
                        html += '<td><span class="money" style="color:red">' + item.GIA + '</span></td>';
                        html += '<td><a href="#" <a href="#" onclick="XoaChiTietPhieuNhapTamThoi(\'' + item.SOKHUNG + '\',\'' + item.SOMAY + '\')">Xóa</a></td>';
                        html += '</tr>';
                    });
                    $('#ChiTietPhieuNhap_DetailTable').html(html)
                    $('.money').simpleMoneyFormat();
                }
            })
        }
    }


    function XoaChiTietPhieuNhapTamThoi(soKhung, soMay) {
        Swal.fire({
            title: 'Xác nhận xóa ?',
            text: "Khi bấm xác nhận dữ liệu không vi phạm điều kiện sẽ được hủy!",
            icon: 'question',
            customClass: 'swal-wide',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            cancelButtonText: 'hủy',
            confirmButtonText: 'Xác nhận',
            allowOutsideClick: false
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    type: "GET",
                    url: "/Admin/PhieuNhap/XoaChiTietPhieuNhapTamThoi?SoKhung=" + soKhung + "&SoMay=" + soMay,
                    success: function (res) {
                        if (res.error == false) {
                            Swal.fire({
                                title: 'Thành công',
                                text: res.title,
                                icon: 'success',
                                customClass: 'swal-wide',
                            })
                        }
                        else {
                            Swal.fire({
                                title: 'Lỗi!',
                                text: res.title,
                                icon: 'error',
                                customClass: 'swal-wide',
                            })
                        }
                        var html = '';
                        $.each(res.list, function (key, item) {
                            html += '<tr>';
                            html += '<td>' + (key + 1) + '</td>';
                            html += '<td>' + item.MALOAI + '</td>';
                            html += '<td>' + item.TENLOAI + '</td>';
                            html += '<td>' + item.SOKHUNG + '</td>';
                            html += '<td>' + item.SOMAY + '</td>';
                            html += '<td><span class="money" style="color:red">' + item.GIA + '</span></td>';
                            html += '<td><a href="#" <a href="#" onclick="XoaChiTietPhieuNhapTamThoi(\'' + item.SOKHUNG + '\',\'' + item.SOMAY + '\')">Xóa</a></td>';
                            html += '</tr>';
                        });
                        $('#ChiTietPhieuNhap_DetailTable').html(html)
                        $('.money').simpleMoneyFormat();
                    }
                })
            }
        })
    }

    function ThemChiTietPhieuNhap_ThuCong() {
        Swal.fire({
            title: 'Xác nhận lưu danh sách?',
            text: "Khi bấm xác nhận dữ liệu không vi phạm điều kiện sẽ được thêm!",
            icon: 'question',
            customClass: 'swal-wide',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            cancelButtonText: 'hủy',
            confirmButtonText: 'Xác nhận',
            allowOutsideClick: false
        }).then((result) => {
            if (result.isConfirmed) {
                var dateTime = $('#NgayNhapID').val()
                $.ajax({
                    type: "POST",
                    url: "/Admin/PhieuNhap/ThemChiTietPhieuNhap_ThuCong?NgayLap=" + dateTime,
                    success: function (res) {
                        if (res.error == false) {
                            Swal.fire({
                                title: 'Thành công',
                                text: res.title,
                                icon: 'success',
                                customClass: 'swal-wide',
                            })
                            $("#ThemChiTietPhieuNhap_Modal").modal('hide')
                            location.reload();
                        }
                        else {
                            Swal.fire({
                                title: 'Lỗi!',
                                text: res.title,
                                icon: 'error',
                                customClass: 'swal-wide',
                            })
                            return;
                        }
                    }
                })
            }
        })
    }


    function KiemTraTrangThaiPhieuDat(MaNCC) {
        Swal.fire({
            title: 'Nhập mã phiếu đặt đến nhà cung cấp có mã: ' + MaNCC,
            text: 'Vui lòng nhập chính xác để tiến hành nhập hàng',
            input: 'text',
            inputAttributes: {
                autocapitalize: 'off'
            },
            customClass: 'swal-wide',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            cancelButtonText: 'hủy',
            confirmButtonText: 'Xác nhận',
            allowOutsideClick: false
        }).then((result) => {
            if (result.isConfirmed) {
                var MaPD = result.value
                if ($.isNumeric(MaPD) == 1) {
                    $.ajax({
                        type: "GET",
                        url: "/Admin/PhieuNhap/KiemTraTrangThaiPhieuDat?MaPD=" + MaPD + "&MaNCC=" + MaNCC,
                        success: function (res) {
                            if (res.error == false) {
                                getImportExcel(MaNCC, MaPD);
                            }
                            else {
                                Swal.fire({
                                    title: 'Lỗi!',
                                    text: res.title,
                                    icon: 'error',
                                    customClass: 'swal-wide',
                                })
                            }
                        }
                    })
                }
                else {
                    Swal.fire({
                        title: 'Lỗi!',
                        text: "Mã phiếu đặt phải là giá trị số",
                        icon: 'error',
                        customClass: 'swal-wide',
                    })
                    return;
                }
            }
        })
    }

    function ImportExcel() {
        Swal.fire({
            title: 'Xác nhận Import excel phiếu nhập?',
            text: "Khi bấm xác nhận dữ liệu không vi phạm điều kiện sẽ được thêm!",
            icon: 'question',
            customClass: 'swal-wide',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            cancelButtonText: 'hủy',
            confirmButtonText: 'Xác nhận',
            allowOutsideClick: false
        }).then((result) => {
            if (result.isConfirmed) {

                var formData = new FormData();
                var FileExcel = $("#FileExcel").get(0);

                formData.append("file", FileExcel.files[0]);

                $.ajax({
                    type: "POST",
                    url: "/Admin/PhieuNhap/ImportExcel",
                    contentType: false,
                    processData: false,
                    data: formData,
                    success: function (res) {
                        if (res.error == false) {
                            Swal.fire({
                                title: 'Thành công',
                                text: res.title,
                                icon: 'success',
                                customClass: 'swal-wide',
                            })
                        }
                        else {
                            Swal.fire({
                                title: 'Lỗi!',
                                text: res.title,
                                icon: 'error',
                                customClass: 'swal-wide',
                            })
                        }
                        var html = '';
                        $.each(res.list, function (key, item) {
                            html += '<tr>';
                            html += '<td>' + (key + 1) + '</td>';
                            html += '<td>' + item.MALOAI + '</td>';
                            html += '<td>' + item.TENLOAI + '</td>';
                            html += '<td>' + item.SOKHUNG + '</td>';
                            html += '<td>' + item.SOMAY + '</td>';
                            html += '<td><span class="money" style="color:red">' + item.GIA + '</span></td>';
                            html += '<td><a href="#" <a href="#" onclick="XoaChiTietPhieuNhapTamThoi(\'' + item.SOKHUNG + '\',\'' + item.SOMAY + '\')">Xóa</a></td>';
                            html += '</tr>';
                        });
                        $('#ChiTietPhieuNhap_DetailTable').html(html)
                        $('.money').simpleMoneyFormat();
                    }
                })
            }
        })
    }


    function ThemChiTietPhieuNhap_ImportExcel(MaNCC) {
        Swal.fire({
            title: 'Xác nhận lưu danh sách?',
            text: "Khi bấm xác nhận dữ liệu không vi phạm điều kiện sẽ được thêm!",
            icon: 'question',
            customClass: 'swal-wide',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            cancelButtonText: 'hủy',
            confirmButtonText: 'Xác nhận',
            allowOutsideClick: false
        }).then((result) => {
            if (result.isConfirmed) {
                var dateTime = $('#NgayNhap_ImportExcelID').val()
                var maPD = $('#MaPD').val()
                $.ajax({
                    type: "POST",
                    url: "/Admin/PhieuNhap/ThemChiTietPhieuNhap_ImportExcel?MaNCC=" + MaNCC + "&MaPD=" + maPD + "&NgayLap=" + dateTime,
                    success: function (res) {
                        if (res.error == false) {
                            Swal.fire({
                                title: 'Thành công',
                                text: res.title,
                                icon: 'success',
                                customClass: 'swal-wide',
                            })
                            $("#ThemChiTietPhieuNhap_Modal").modal('hide')
                            location.reload();
                        }
                        else {
                            Swal.fire({
                                title: 'Lỗi!',
                                text: res.title,
                                icon: 'error',
                                customClass: 'swal-wide',
                            })
                            return;
                        }
                    }
                })
            }
        })
    }

</script>