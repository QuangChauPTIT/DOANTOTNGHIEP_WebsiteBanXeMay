@using WebsiteBanXeMay.Areas.Admin.ViewModels;
@model IEnumerable<ChiTietPhieuNhapViewModel>
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">Phiếu nhập có mã: @ViewBag.MAPN</h4>
</div>
<div class="modal-body" >
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Danh sách loại sản phẩm</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body" style="overflow-y:auto!important;max-height:400px!important">
                    <table class="table table-bordered">
                        <tr>
                            <th>Mã loại sản phẩm</th>
                            <th>Tên loại sản phẩm</th>
                            <th>Hình ảnh</th>
                            <th>Số lượng</th>
                            <th>Giá</th>
                        </tr>
                        @if (Model.Count() > 0)
                        {
                            foreach (var LoaiSanPham in Model)
                            {
                                <tr>
                                    <td>@LoaiSanPham.MALOAI</td>
                                    <td>@LoaiSanPham.TENLOAI</td>
                                    <td>
                                        <img src="@Url.Content("~/Assets/upload/images/"+LoaiSanPham.HINHANH)" width="100" height="100" alt="@LoaiSanPham.HINHANH ">
                                    </td>
                                    <td>
                                        @LoaiSanPham.SOLUONG
                                    </td>
                                    <td>
                                        <span class="money" style="color:red">@LoaiSanPham.GIA</span>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center"><span>Không có dữ liệu</span></td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-danger pull-right" data-dismiss="modal"><i class="fa fa-close" title="Đóng"></i></button>
</div>

<script>
    $('.money').simpleMoneyFormat();
</script>




