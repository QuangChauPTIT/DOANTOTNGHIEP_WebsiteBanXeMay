<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">Thêm thương hiệu</h4>
</div>
<div class="modal-body">
    <form name="ThuongHieuForm">
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-6">
                <label>Mã thương hiệu<span class="required">*</span></label>
                <input placeholder="Mã thương hiệu" name="MATH" class="form-control" value=""  type="text">
            </div>
            <div class="col-md-6">
                <label>Tên thương hiệu<span class="required">*</span></label>
                <input placeholder="Tên thương hiệu" name="TENTH" class="form-control" value=""type="text">
            </div>
        </div>

    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-danger pull-right" data-dismiss="modal"><i class="fa fa-close" title="Đóng"></i></button>
    <button type="button" class="btn btn-success" onclick="ThemTuongHieu()" style="margin-right:3%!important"><i class="fa fa-save" title="Lưu"></i></button>
</div>


