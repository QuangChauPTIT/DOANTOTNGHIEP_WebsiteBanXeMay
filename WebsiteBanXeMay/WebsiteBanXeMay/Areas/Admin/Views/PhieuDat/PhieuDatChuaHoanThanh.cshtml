@using WebsiteBanXeMay.Utils
@model PageUtil
@{
    ViewBag.Title = "PhieuDatChuaHoanThanh";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div style="height:100%">
    @*content-wrapper*@
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Đặt hàng
        </h1>
        <ol class="breadcrumb">
            <li><i class="fa fa-dashboard"></i> Danh mục</li>
            <li class="active"> Đặt hàng</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">Danh sách phiếu đặt chưa hoàn thành</h3>
                        <button title="Đặt hàng" class="btn btn-primary" style="float:right!important" onclick="getNhaCungCap()"><i class="fa fa-save"></i></button>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="tableIDTH" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Mã phiếu đặt</th>
                                    <th>Mã nhân viên</th>
                                    <th>Họ tên nhân viên</th>
                                    <th>Ngày lập</th>
                                    <th>Tác vụ</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Data.Count() > 0)
                                {
                                    foreach (var PhieuDatViewModel in Model.PaginatedResult())
                                    {
                                        <tr>
                                            <td>@PhieuDatViewModel.MAPD</td>

                                            <td>
                                                @PhieuDatViewModel.MANV
                                            </td>
                                            <td>
                                                @(PhieuDatViewModel.HO + " " + PhieuDatViewModel.TEN)
                                            </td>
                                            <td>
                                                @PhieuDatViewModel.NGAYLAP.ToString("dd/MM/yyyy hh:mm:ss")
                                            </td>
                                            <td>
                                                <button title="Xem chi tiết" onclick="getChiTietPhieuDat('@PhieuDatViewModel.MAPD')" class="btn btn-warning"><i class="fa fa-info"></i></button>
                                                <a role="button" title="Xuất file excel" href="@Url.Action("ExportExcel","PhieuDat",new { MaPD = PhieuDatViewModel.MAPD})" class="btn btn-success"><i class="fa fa-file-excel-o"></i></a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center"><span>Không có dữ liệu</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="box-footer clearfix">
                        <ul class="pagination pagination-sm no-margin pull-right">
                            <li>
                                @Html.ActionLink("Trước", "Index", new { Trang = Model.CurrentPage > 1 ? Model.CurrentPage - 1 : 1 }, null)
                            </li>
                            @for (int page = 1; page <= Model.PageCount(); page++)
                            {
                                <li class="@(page == Model.CurrentPage ? "active" : null)">
                                    @Html.ActionLink(page.ToString(), "Index", new { Trang = page }, null)
                                </li>
                            }
                            <li>
                                @Html.ActionLink("Sau", "Index", new { Trang = Model.CurrentPage < Model.PageCount() ? Model.CurrentPage + 1 : Model.PageCount() }, null)
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<div class="modal fade" id="PhieuDatModal" role="dialog" aria-labelledby="PhieuDatModalLable" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" id="PhieuDatModalBody">

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<div class="modal fade" id="ThemChiTietPhieuDat_Modal" role="dialog" aria-labelledby="ThemChiTietPhieuDat_ModalLable" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" id="ThemChiTietPhieuDat_ModalBody">

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>


<div class="modal fade" id="SuaChiTietPhieuDat_Modal" role="dialog" aria-labelledby="SuaChiTietPhieuDat_ModalLable" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" id="SuaChiTietPhieuDat_ModalBody">

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<script>
    function getNhaCungCap() {
        $.ajax({
            type: "GET",
            url: "/Admin/PhieuDat/NhaCungCapPartial",
            success: function (res) {
                $("#PhieuDatModalBody").html(res);
                $("#PhieuDatModal").modal('show')
            }
        })
    }

    // modal Xem chi tiết phiếu đặt
    function getChiTietPhieuDat(id) {
        $.ajax({
            type: "GET",
            url: "/Admin/PhieuDat/ChiTietPhieuDatPartial?MaPD=" + id,
            success: function (res) {
                $("#PhieuDatModalBody").html(res);
                $("#PhieuDatModal").modal('show')
            }
        })
    };

    // modal thêm chi tiết phiếu đặt
    function getThemChiTietPhieuDatTamThoi(id) {
        $.ajax({
            type: "GET",
            url: "/Admin/PhieuDat/ThemChiTietPhieuDatTamThoiPartial?MaNCC=" + id,
            success: function (res) {
                $("#ThemChiTietPhieuDat_ModalBody").html(res);
                $("#ThemChiTietPhieuDat_Modal").modal('show')
            }
        })
    };

    // modal thêm chi tiết phiếu đặt
    function getSuaChiTietPhieuDatTamThoi(id) {
        $.ajax({
            type: "GET",
            url: "/Admin/PhieuDat/SuaChiTietPhieuDatTamThoiPartial?MaLoai=" + id,
            success: function (res) {
                $("#SuaChiTietPhieuDat_ModalBody").html(res);
                $("#SuaChiTietPhieuDat_Modal").modal('show')
            }
        })
    };
    //Đóng modal thêm chi tiết
    function HuyDatHang() {
        Swal.fire({
            title: 'Xác nhận hủy chi tiết phiếu đặt?',
            text: "Khi bấm xác nhận dữ liệu không vi phạm điều kiện sẽ được hủy!",
            icon: 'question',
            customClass: 'swal-wide',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            cancelButtonText: 'hủy',
            confirmButtonText: 'Xác nhận',
            allowOutsideClick: false
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    type: "POST",
                    url: "/Admin/PhieuDat/XoaTatCaChiTietPhieuDatTamThoi",
                    success: function (res) {
                        Swal.fire({
                            title: 'Thành công!',
                            text: res.title,
                            icon: 'success',
                            customClass: 'swal-wide',
                        }).then((d) => {
                            if (d.isConfirmed) {
                                $("#ThemChiTietPhieuDat_Modal").modal('hide');
                            }
                        });
                    }
                })
            }
        })
    }


    function ThemChiTietPhieuDatTamThoi() {
        var form = $('form[name="ThemChiTietPhieuDatTamThoi_Form"]');
        form.validate();
        if (!form.valid()) {
            return;
        }
        else {
            var data = form.serialize();
            $.ajax({
                type: "POST",
                url: "/Admin/PhieuDat/ThemChiTietPhieuDatTamThoi",
                data: data,
                dataType: "json",
                success: function (res) {
                    if (res.error == false) {
                        var html = '';
                        $.each(res.list, function (key, item) {
                            html += '<tr>';
                            html += '<td>' + (key + 1) + '</td>';
                            html += '<td>' + item.MALOAI + '</td>';
                            html += '<td>' + item.TENLOAI + '</td>';
                            html += '<td>' + item.SOLUONG + '</td>';
                            html += '<td><span class="money" style="color:red">' + item.GIA + '</span></td>';
                            html += '<td><a href="#" onclick="getSuaChiTietPhieuDatTamThoi(\'' + item.MALOAI + '\')">Sửa</a> | <a href="#" onclick="XoaChiTietPhieuDatTamThoi(\'' + item.MALOAI + '\')">Xóa</a></td>';
                            html += '</tr>';
                        });
                        $('#ChiTietPhieuDat_DetailTable').html(html)
                        $('.money').simpleMoneyFormat();
                    }
                    else {
                        Swal.fire({
                            title: 'Lỗi!',
                            text: res.title,
                            icon: 'error',
                            customClass: 'swal-wide',
                        })
                        return;
                    }
                }
            })
        }
    }
    function SuaChiTietPhieuNhapTamThoi() {
        Swal.fire({
            title: 'Xác nhận hiệu chỉnh ?',
            text: "Khi bấm xác nhận dữ liệu không vi phạm điều kiện sẽ được hiệu chỉnh!",
            icon: 'question',
            customClass: 'swal-wide',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            cancelButtonText: 'hủy',
            confirmButtonText: 'Xác nhận',
            allowOutsideClick: false
        }).then((result) => {
            if (result.isConfirmed) {
                var form = $('form[name="SuaChiTietPhieuDatTamThoi_Form"]');

                form.validate();
                if (!form.valid()) {
                    return;
                }
                else {
                    var data = form.serialize();
                    $.ajax({
                        type: "POST",
                        url: "/Admin/PhieuDat/SuaChiTietPhieuDatTamThoi",
                        data: data,
                        dataType: "json",
                        success: function (res) {
                            if (res.error == false) {
                                var html = '';
                                $.each(res.list, function (key, item) {
                                    html += '<tr>';
                                    html += '<td>' + (key + 1) + '</td>';
                                    html += '<td>' + item.MALOAI + '</td>';
                                    html += '<td>' + item.TENLOAI + '</td>';
                                    html += '<td>' + item.SOLUONG + '</td>';
                                    html += '<td><span class="money" style="color:red">' + item.GIA + '</span></td>';
                                    html += '<td><a href="#" onclick="getSuaChiTietPhieuDatTamThoi(\'' + item.MALOAI + '\')">Sửa</a> | <a href="#" onclick="XoaChiTietPhieuDatTamThoi(\'' + item.MALOAI + '\')">Xóa</a></td>';
                                    html += '</tr>';
                                });
                                $('#ChiTietPhieuDat_DetailTable').html(html)
                                $('.money').simpleMoneyFormat();
                                $("#SuaChiTietPhieuDat_Modal").modal('hide')
                            }
                            else {
                                Swal.fire({
                                    title: 'Lỗi!',
                                    text: res.title,
                                    icon: 'error',
                                    customClass: 'swal-wide',
                                })
                                return;
                            }
                        }
                    })
                }
            }
        })
    }
    function XoaChiTietPhieuDatTamThoi(MaLoai) {
        Swal.fire({
            title: 'Xác nhận hủy nhập loại sản phẩm mã: ' + MaLoai + '?',
            text: "Khi bấm xác nhận dữ liệu không vi phạm điều kiện sẽ được hủy!",
            icon: 'question',
            customClass: 'swal-wide',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            cancelButtonText: 'hủy',
            confirmButtonText: 'Xác nhận',
            allowOutsideClick: false
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    type: "POST",
                    url: "/Admin/PhieuDat/XoaChiTietPhieuDatTamThoi?MaLoai=" + MaLoai,
                    success: function (res) {
                        if (res.error == false) {
                            var html = '';
                            $.each(res.list, function (key, item) {
                                html += '<tr>';
                                html += '<td>' + (key + 1) + '</td>';
                                html += '<td>' + item.MALOAI + '</td>';
                                html += '<td>' + item.TENLOAI + '</td>';
                                html += '<td>' + item.SOLUONG + '</td>';
                                html += '<td><span class="money" style="color:red">' + item.GIA + '</span></td>';
                                html += '<td><a href="#" onclick="getSuaChiTietPhieuDatTamThoi(\'' + item.MALOAI + '\')">Sửa</a> | <a href="#" onclick="Delete_ChiTietPhieuDatTamThoi(\'' + item.MALOAI + '\')">Xóa</a></td>';
                                html += '</tr>';
                            });
                            $('#ChiTietPhieuDat_DetailTable').html(html)
                            $('.money').simpleMoneyFormat();
                        }
                        else {
                            Swal.fire({
                                title: 'Lỗi!',
                                text: res.title,
                                icon: 'error',
                                customClass: 'swal-wide',
                            })
                            return;
                        }
                    }
                })
            }
        })
    }


    function ThemChiTietPhieuDat() {
        Swal.fire({
            title: 'Xác nhận đặt hàng hàng?',
            text: "Khi bấm xác nhận dữ liệu không vi phạm điều kiện sẽ được thêm!",
            icon: 'question',
            customClass: 'swal-wide',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            cancelButtonText: 'hủy',
            confirmButtonText: 'Xác nhận',
            allowOutsideClick: false
        }).then((result) => {
            var MaNCC = $('#NhaCungCapID').val()
            if (result.isConfirmed) {
                $.ajax({
                    type: "POST",
                    url: "/Admin/PhieuDat/ThemChiTietPhieuDat?MaNCC=" + MaNCC,
                    success: function (res) {
                        if (res.error == false) {
                            Swal.fire({
                                title: 'Thành công!',
                                text: res.title,
                                icon: 'success',
                                customClass: 'swal-wide',
                            }).then((d) => {
                                if (d.isConfirmed) {
                                    $("#PhieuDatModal").modal('hide')
                                    location.reload();
                                }
                            });
                        }
                        else {
                            Swal.fire({
                                title: 'Lỗi!',
                                text: res.title,
                                icon: 'error',
                                customClass: 'swal-wide',
                            })
                            return;
                        }
                    }
                })
            }
        })
    }
</script>