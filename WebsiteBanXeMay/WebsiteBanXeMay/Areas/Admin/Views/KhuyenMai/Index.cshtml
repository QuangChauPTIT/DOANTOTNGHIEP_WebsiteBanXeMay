                        success: function (res) {
                            if (res.error == false) {
                                Swal.fire({
                                    title: 'Thành công!',
                                    text: res.title,
                                    icon: 'success',
                                    customClass: 'swal-wide',
                                }).then((d) => {
                                    if (d.isConfirmed) {
                                        $("#KhuyenMai_Modal").modal('hide')
                                        location.reload();
                                    }
                                })
                            }
                            else {
                                Swal.fire({
                                    title: 'Lỗi!',
                                    text: res.title,
                                    icon: 'error',
                                    customClass: 'swal-wide',
                                })
                                return;
                            }
                        }
                    })
                }
            }
        })
    }
    function XoaKhuyenMai(MaKM) {
        Swal.fire({
            title: 'Xác nhận xóa khuyến mãi có mã ' + MaKM + ' ?',
            text: "Khi bấm xác nhận dữ liệu không vi phạm điều kiện sẽ được xóa!",
            icon: 'question',
            customClass: 'swal-wide',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            cancelButtonText: 'hủy',
            confirmButtonText: 'Xác nhận',
            allowOutsideClick: false
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    type: "GET",
                    url: "/Admin/KhuyenMai/XoaKhuyenMai/?MaKM=" + MaKM,
                    success: function (res) {
                        if (res.error == false) {
                            Swal.fire({
                                title: 'Thành công!',
                                text: res.title,
                                icon: 'success',
                                customClass: 'swal-wide',
                            }).then((d) => {
                                if (d.isConfirmed) {
                                    location.reload();
                                }
                            })
                        }
                        else {
                            Swal.fire({
                                title: 'Lỗi!',
                                text: res.title,
                                icon: 'error',
                                customClass: 'swal-wide',
                            })
                            return;
                        }
                    }
                })
            }
        })
    }
    function ThemChiTietKhuyenMaiTamThoi() {
        var form = $('form[name="ThemChiTietKhuyenMaiTamThoi_Form"]');
        form.validate();
        if (!form.valid()) {
            return;
        }
        else {
            var data = form.serialize();
            $.ajax({
                type: "POST",
                url: "/Admin/KhuyenMai/ThemChiTietKhuyenMaiTamThoi",
                data: data,
                dataType: "json",
                success: function (res) {
                    if (res.error == false) {
                        Swal.fire({
                            title: 'Thành công',
                            text: res.title,
                            icon: 'success',
                            customClass: 'swal-wide',
                        })
                    }
                    else {
                        Swal.fire({
                            title: 'Lỗi!',
                            text: res.title,
                            icon: 'error',
                            customClass: 'swal-wide',
                        })
                    }
                    var html = '';
                    $.each(res.list, function (key, item) {
                        html += '<tr>';
                        html += '<td>' + (key + 1) + '</td>';
                        html += '<td>' + item.MALOAI + '</td>';
                        html += '<td>' + item.TENLOAI + '</td>';
                        html += '<td><span  style="color:red">' + item.PHANTRAM + ' %</span></td>';
                        html += '<td><a href="#" onclick="SuaChiTietKhuyenMaiTamThoi(\'' + item.MALOAI + '\')">Sửa</a> | <a href="#" onclick="XoaChiTietKhuyenMaiTamThoi(\'' + item.MALOAI + '\')">Xóa</a></td>';
                        html += '</tr>';
                    });
                    $('#ChiTietKhuyenMai_DetailTable').html(html)
                }
            })
        }
    }

    function SuaChiTietKhuyenMaiTamThoi(MaLoai) {
        Swal.fire({
            title: 'Hiệu chỉnh phần trăm khuyến mãi cho loại sản phâm có mã: ' + MaLoai,
            text: 'Vui lòng nhập phần trăm từ 0.1 đến 100',
            input: 'text',
            inputAttributes: {
                autocapitalize: 'off'
            },
            customClass: 'swal-wide',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            cancelButtonText: 'hủy',
            confirmButtonText: 'Xác nhận',
            allowOutsideClick: false
        }).then((result) => {
            if (result.isConfirmed) {
                var PhanTram = result.value
                if ($.isNumeric(PhanTram) == 1) {
                    $.ajax({
                        type: "POST",
                        url: "/Admin/KhuyenMai/SuaChiTietKhuyenMaiTamThoi?MaLoai=" + MaLoai + "&PhanTram=" + PhanTram,
                        success: function (res) {
                            if (res.error == false) {
                                Swal.fire({
                                    title: 'Thành công',
                                    text: res.title,
                                    icon: 'success',
                                    customClass: 'swal-wide',
                                })
                            }
                            else {
                                Swal.fire({
                                    title: 'Lỗi!',
                                    text: res.title,
                                    icon: 'error',
                                    customClass: 'swal-wide',
                                })
                            }
                            var html = '';
                            $.each(res.list, function (key, item) {
                                html += '<tr>';
                                html += '<td>' + (key + 1) + '</td>';
                                html += '<td>' + item.MALOAI + '</td>';
                                html += '<td>' + item.TENLOAI + '</td>';
                                html += '<td><span  style="color:red">' + item.PHANTRAM + ' %</span></td>';
                                html += '<td><a href="#" onclick="SuaChiTietKhuyenMaiTamThoi(\'' + item.MALOAI + '\')">Sửa</a> | <a href="#" onclick="XoaChiTietKhuyenMaiTamThoi(\'' + item.MALOAI + '\')">Xóa</a></td>';
                                html += '</tr>';
                            });
                            $('#ChiTietKhuyenMai_DetailTable').html(html)
                        }
                    })
                }
                else {
                    Swal.fire({
                        title: 'Lỗi!',
                        text: "Phần trăm là bắt buộc",
                        icon: 'error',
                        customClass: 'swal-wide',
                    })
                    return;
                }
            }
        })
    }

    function XoaChiTietKhuyenMaiTamThoi(MaLoai) {
        Swal.fire({
            title: 'Xác nhận xóa loại sản phẩm khỏi danh sách khuyến mãi mã: ' + MaLoai + '?',
            text: "Khi bấm xác nhận dữ liệu không vi phạm điều kiện sẽ được hủy!",
            icon: 'question',
            customClass: 'swal-wide',
            showCancelButton: true,
