@using WebsiteBanXeMay.Utils;
@model PageUtil
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="">
    @*content-wrapper*@
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Khuyến mãi
        </h1>
        <ol class="breadcrumb">
            <li><i class="fa fa-dashboard"></i> Danh mục</li>
            <li><a href="#">Quản lý danh mục</a></li>
            <li class="active">Khuyến mãi</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">Danh sách khuyến mãi</h3>
                        <button title="Thêm" class="btn btn-success" style="float:right!important" onclick="getThemKhuyenMai()"><i class="fa fa-save"></i></button>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table class="table table-bordered">
                            <tr>
                                <th style="width:5%">Mã khuyến mãi</th>
                                <th>Tên khuyến mãi</th>
                                <th>Ngày bắt đầu</th>
                                <th>Ngày kết thúc</th>
                                <th>Mô tả</th>
                                <th>Trạng thái</th>
                                <th>Nhân viên tạo khuyến mãi</th>
                                <th style="width:20%">Tác vụ</th>
                            </tr>
                            @if (Model.Data.Count() > 0)
                            {
                                foreach (var KhuyenMaiViewModel in Model.PaginatedResult())
                                {
                                    <tr>
                                        <td>@KhuyenMaiViewModel.MAKM</td>

                                        <td>
                                            @KhuyenMaiViewModel.TENKM
                                        </td>
                                        <td>
                                            @KhuyenMaiViewModel.NGAYBATDAU.ToString("dd/MM/yyyy hh:mm tt")
                                        </td>
                                        <td>
                                            @KhuyenMaiViewModel.NGAYKETTHUC.ToString("dd/MM/yyyy hh:mm tt")
                                        </td>
                                        <td>
                                            @KhuyenMaiViewModel.MOTA
                                        </td>
                                        <td>
                                            @if (KhuyenMaiViewModel.NGAYBATDAU <= DateTime.Now && KhuyenMaiViewModel.NGAYKETTHUC >= DateTime.Now)
                                            {
                                                <span style="color:blue">Đang hoạt động</span>
                                            }
                                            else if (DateTime.Now > KhuyenMaiViewModel.NGAYKETTHUC)
                                            {
                                                <span style="color:red">Đã kết thúc</span>
                                            }
                                            else if (KhuyenMaiViewModel.NGAYBATDAU > DateTime.Now && KhuyenMaiViewModel.NGAYBATDAU.Day - DateTime.Now.Day <= 7)
                                            {
                                                <span style="color:green">Sắp diễn ra</span>
                                            }
                                            else if (KhuyenMaiViewModel.NGAYBATDAU > DateTime.Now && KhuyenMaiViewModel.NGAYBATDAU.Day - DateTime.Now.Day > 7)
                                            {
                                                <span style="color:#006666">Dự định</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="col-md-12">Mã nhân viên:<span class="text-blue"> @KhuyenMaiViewModel.MANV</span></span>
                                            <span class="col-md-12">Họ tên:<span class="text-blue"> @(KhuyenMaiViewModel.HO+" "+ KhuyenMaiViewModel.TEN)</span></span>
                                        </td>
                                        <td>
                                            <button title="Chi tiết" class="btn btn-warning" onclick="getChiTietKhuyenMai(@KhuyenMaiViewModel.MAKM)"><i class="fa fa-info"></i></button>
                                            @if (KhuyenMaiViewModel.NGAYBATDAU > DateTime.Now)
                                            {
                                                <button title="Hiệu chỉnh" class="btn btn-primary" onclick="getSuaKhuyenMai(@KhuyenMaiViewModel.MAKM)"><i class="fa fa-edit"></i></button>
                                                <button title="Hiệu chỉnh chi tiết khuyến mãi" class="btn btn-success" onclick="getThemChiTietKhuyenMaiTamThoi(@KhuyenMaiViewModel.MAKM)"><i class="fa fa-edit"></i></button>
                                                <button title="Xóa" class="btn btn-danger" onclick="XoaKhuyenMai(@KhuyenMaiViewModel.MAKM)"><i class="fa fa-remove"></i></button>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center"><span>Không có dữ liệu</span></td>
                                </tr>
                            }
                        </table>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer clearfix">
                        <ul class="pagination pagination-sm no-margin pull-right">
                            <li>
                                @Html.ActionLink("Trước", "Index", new { Trang = Model.CurrentPage > 1 ? Model.CurrentPage - 1 : 1 }, null)
                            </li>
                            @for (int page = 1; page <= Model.PageCount(); page++)
                            {
                                <li class="@(page == Model.CurrentPage ? "active" : null)">
                                    @Html.ActionLink(page.ToString(), "Index", new { Trang = page }, null)
                                </li>
                            }
                            <li>
                                @Html.ActionLink("Sau", "Index", new { Trang = Model.CurrentPage < Model.PageCount() ? Model.CurrentPage + 1 : Model.PageCount() }, null)
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<div class="modal fade" id="KhuyenMai_Modal" role="dialog" aria-labelledby="KhuyenMai_ModalLable" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" id="KhuyenMai_ModalBody">

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<script>

    function getThemKhuyenMai() {
        $.ajax({
            type: "GET",
            url: "/Admin/KhuyenMai/ThemKhuyenMaiPartial",
            success: function (res) {
                $("#KhuyenMai_ModalBody").html(res);
                $("#KhuyenMai_Modal").modal('show')
            }
        })
    };
    function getSuaKhuyenMai(MaKM) {
        $.ajax({
            type: "GET",
            url: "/Admin/KhuyenMai/SuaKhuyenMaiPartial?MaKM=" + MaKM,
            success: function (res) {
                $("#KhuyenMai_ModalBody").html(res);
                $("#KhuyenMai_Modal").modal('show')
            }
        })
    };

    function getChiTietKhuyenMai(MaKM) {
        $.ajax({
            type: "GET",
            url: "/Admin/KhuyenMai/ChiTietKhuyenMaiPartial?MaKM=" + MaKM,
            success: function (res) {
                $("#KhuyenMai_ModalBody").html(res);
                $("#KhuyenMai_Modal").modal('show')
            }
        })
    };

    function getThemChiTietKhuyenMaiTamThoi(MaKM) {
        $.ajax({
            type: "GET",
            url: "/Admin/KhuyenMai/SuaChiTietKhuyenMaiTamThoiPartial?MaKM=" + MaKM,
            success: function (res) {
                $("#KhuyenMai_ModalBody").html(res);
                $("#KhuyenMai_Modal").modal('show')
            }
        })
    };


    function ThemKhuyenMai() {

        Swal.fire({
            title: 'Xác nhận thêm?',
            text: "Khi bấm xác nhận dữ liệu không vi phạm điều kiện sẽ được thêm!",
            icon: 'question',
            customClass: 'swal-wide',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            cancelButtonText: 'hủy',
            confirmButtonText: 'Xác nhận',
            allowOutsideClick: false
        }).then((result) => {
            if (result.isConfirmed) {
                var form = $('form[name="KhuyenMai_Form"]');

                form.validate();
                if (!form.valid()) {
                    return;
                }
                else {
                    var data = form.serialize();
                    $.ajax({
                        type: "POST",
                        url: "/Admin/KhuyenMai/ThemKhuyenMai",
                        data: data,
                        dataType: "json",
                        success: function (res) {
                            if (res.error == false) {
                                Swal.fire({
                                    title: 'Thành công!',
                                    text: res.title,
                                    icon: 'success',
                                    customClass: 'swal-wide',
                                }).then((d) => {
                                    if (d.isConfirmed) {
                                        $("#KhuyenMai_Modal").modal('hide')
                                        location.reload();
                                    }
                                });
                            }
                            else {
                                Swal.fire({
                                    title: 'Lỗi!',
                                    text: res.title,
                                    icon: 'error',
                                    customClass: 'swal-wide',
                                })
                                return;
                            }
                        }
                    })
                }
            }
        })
    }
    function SuaKhuyenMai() {

        Swal.fire({
            title: 'Xác nhận hiệu chỉnh?',
            text: "Khi bấm xác nhận dữ liệu không vi phạm điều kiện sẽ được hiệu chỉnh!",
            icon: 'question',
            customClass: 'swal-wide',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
