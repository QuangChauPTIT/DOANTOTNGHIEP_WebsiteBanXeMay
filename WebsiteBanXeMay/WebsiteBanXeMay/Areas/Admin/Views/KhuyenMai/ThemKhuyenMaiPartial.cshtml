<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">Thêm khuyến mãi</h4>
</div>
<div class="modal-body">
    <form name="KhuyenMai_Form">
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-12">
                <label>Tên khuyến mãi<span class="required">*</span></label>
                <input placeholder="Tên khuyến mãi" name="TENKM" class="form-control" value="" type="text">
            </div>
            <div class="col-md-6" style="margin-top:2%">
                <label>Ngày bắt đầu<span class="required">*</span></label>
                <input placeholder="Ngày bắt đầu" name="NGAYBATDAU"  min="@DateTime.Now.ToString("yyyy-MM-ddThh:mm")" class="form-control" value="" type="datetime-local">
            </div>
            <div class="col-md-6"  style="margin-top:2%">
                <label>Ngày kết thúc<span class="required">*</span></label>
                <input placeholder="Ngày kết thúc" name="NGAYKETTHUC" min="@DateTime.Now.ToString("yyyy-MM-ddThh:mm")"  class="form-control" value="" type="datetime-local">
            </div>
            <div class="col-md-12"  style="margin-top:2%">
                <label>Mô tả</label>
                <textarea class="form-control" id="MOTA" rows="7"></textarea>
            </div>
        </div>

    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-danger pull-right" data-dismiss="modal"><i class="fa fa-close" title="Đóng"></i></button>
    <button type="button" class="btn btn-success" onclick="ThemKhuyenMai()" style="margin-right:3%!important"><i class="fa fa-save" title="Lưu"></i></button>
</div>




