@using WebsiteBanXeMay.Areas.Admin.ViewModels;
@model IEnumerable<ChiTietKhuyenMaiViewModel>
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">Khuyến mãi có mã: @ViewBag.MAKM</h4>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Danh sách loại sản phẩm</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body" style="overflow-y:auto!important;max-height:400px!important">
                    <table class="table table-bordered">
                        <tr>
                            <th>STT</th>
                            <th>Mã loại</th>
                            <th>Tên loại</th>
                            <th>Hình ảnh</th>
                            <th>Phần trăm giảm giá</th>
                        </tr>
                        @if (Model.Count() > 0)
                        {
                            int i = 1;
                            foreach (var LoaiSanPham in Model)
                            {
                                <tr>
                                    <td>@(i++)</td>
                                    <td>@LoaiSanPham.MALOAI</td>
                                    <td>@LoaiSanPham.TENLOAI</td>
                                    <td>
                                        <img src="@Url.Content("~/Assets/upload/images/"+LoaiSanPham.HINHANH)" width="100" height="100" alt="@LoaiSanPham.HINHANH ">
                                    </td>
                                    <td>
                                        <span style="color:red">@LoaiSanPham.PHANTRAM %</span>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center"><span>Không có dữ liệu</span></td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-danger pull-right" data-dismiss="modal"><i class="fa fa-close" title="Đóng"></i></button>
</div>





