@using WebsiteBanXeMay.Models;
@model SANPHAM
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">Hiệu chỉnh sản phẩm có mã: @Model.MASP</h4>
</div>
<div class="modal-body">
    <form name="SanPhamForm">
        @Html.AntiForgeryToken()
        <div class="row">
            <input name="MASP" type="hidden" value="@Model.MASP"/>
            <div class="col-md-6">
                <label>Số khung<span class="required">*</span></label>
                <input placeholder="Số khung" name="SOKHUNG" class="form-control" value="@Model.SOKHUNG" type="text">
            </div>
            <div class="col-md-6">
                <label>Số máy<span class="required">*</span></label>
                <input placeholder="Số máy" name="SOMAY" class="form-control" value="@Model.SOMAY" type="text">
            </div>
        </div>

    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-danger pull-right" data-dismiss="modal"><i class="fa fa-close" title="Đóng"></i></button>
    <button type="button" class="btn btn-success" onclick="SuaSanPham()" style="margin-right:3%!important"><i class="fa fa-save" title="Lưu"></i></button>
</div>




