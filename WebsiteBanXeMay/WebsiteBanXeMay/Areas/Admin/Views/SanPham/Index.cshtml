@using WebsiteBanXeMay.Utils;
@model PageUtil
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="">
    @*content-wrapper*@
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Sản phẩm
        </h1>
        <ol class="breadcrumb">
            <li><i class="fa fa-dashboard"></i> Danh mục</li>
            <li><a href="#">Quản lý danh mục</a></li>
            <li class="active">Sản phẩm</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">
                        <form action="/Admin/SanPham" method="get">
                            <div class="row">
                                <div class="col-md-5">
                                    <label>Tên loại</label>
                                    <input type="text" name="TENLOAI" id="txtTenLoaiSanPham" autocomplete="off" value="@ViewBag.TENLOAI" class="form-control" />
                                </div>
                                <div class="col-md-3">
                                    <label>Số khung</label>
                                    <input type="text" name="SOKHUNG" id="txtSoKhung" autocomplete="off" value="@ViewBag.SOKHUNG" class="form-control" />
                                </div>
                                <div class="col-md-3">
                                    <label>Số máy</label>
                                    <input type="text" name="SOMAY" id="txtSoMay" autocomplete="off" value="@ViewBag.SOMAY" class="form-control" />
                                </div>
                                <div class="col-md-1" style="margin-top:2.3%">
                                    <button title="Tìm kiếm" class="btn btn-info"><i class="fa fa-search"></i></button>
                                </div>
                            </div>

                        </form>
                        <h3 style="margin-top:2%" class="box-title">Danh sách có: <span style="color:red">@(Model.Data.Count() > 0 ? Model.Data.Count() : 0 )</span>  sản phẩm</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table class="table table-bordered">
                            <tr>
                                <th>STT</th>
                                <th>Mã sản phẩm</th>
                                <th>Mã loại</th>
                                <th>Tên loại</th>
                                <th>Hình ảnh</th>
                                <th>Số khung</th>
                                <th>Số máy</th>
                                <th style="width:10%">Tác vụ</th>
                            </tr>
                            @if (Model.Data.Count() > 0)
                            {
                                int i = 1;
                                foreach (var SanPham in Model.PaginatedResult())
                                {
                                    <tr>
                                        <td>@(i++)</td>
                                        <td>@SanPham.MASP</td>
                                        <td>@SanPham.MALOAI</td>

                                        <td>
                                            @SanPham.TENLOAI
                                        </td>
                                        <td>
                                            <img src="@Url.Content("~/Assets/upload/images/"+SanPham.HINHANH)" width="100" height="100" alt="@SanPham.HINHANH ">
                                        </td>
                                        <td>
                                            @SanPham.SOKHUNG
                                        </td>
                                        <td>
                                            @SanPham.SOMAY
                                        </td>


                                        <td>
                                            <button title="Hiệu chỉnh" class="btn btn-primary" onclick="getSuaSanPham(@SanPham.MASP)"><i class="fa fa-edit"></i></button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center"><span>Không có dữ liệu</span></td>
                                </tr>
                            }
                        </table>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer clearfix">
                        <ul class="pagination pagination-sm no-margin pull-right">
                            <li>
                                @Html.ActionLink("Trước", "Index", new { Trang = Model.CurrentPage > 1 ? Model.CurrentPage - 1 : 1 }, null)
                            </li>
                            @for (int page = 1; page <= Model.PageCount(); page++)
                            {
                                <li class="@(page == Model.CurrentPage ? "active" : null)">
                                    @Html.ActionLink(page.ToString(), "Index", new { Trang = page }, null)
                                </li>
                            }
                            <li>
                                @Html.ActionLink("Sau", "Index", new { Trang = Model.CurrentPage < Model.PageCount() ? Model.CurrentPage + 1 : Model.PageCount() }, null)
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<div class="modal fade" id="SanPhamModal" role="dialog" aria-labelledby="SanPhamModalLable" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content" id="SanPhamModalBody">

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<script>

    $(function () {
        $("#txtTenLoaiSanPham").autocomplete({
            source: '/Admin/SanPham/lstTenLoaiSanPham'
        });

        $("#txtSoKhung").autocomplete({
            source: '/Admin/SanPham/lstSoKhung'
        });

        $("#txtSoMay").autocomplete({
            source: '/Admin/SanPham/lstSoMay'
        });
    });
    function getSuaSanPham(MaSP) {
        $.ajax({
            type: "GET",
            url: "/Admin/SanPham/SuaSanPhamPartial?MaSP=" + MaSP,
            success: function (res) {
                $("#SanPhamModalBody").html(res);
                $("#SanPhamModal").modal('show')
            }
        })
    };
    function SuaSanPham() {

        Swal.fire({
            title: 'Xác nhận hiệu chỉnh?',
            text: "Khi bấm xác nhận dữ liệu không vi phạm điều kiện sẽ được hiệu chỉnh!",
            icon: 'question',
            customClass: 'swal-wide',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            cancelButtonText: 'hủy',
            confirmButtonText: 'Xác nhận',
            allowOutsideClick: false
        }).then((result) => {
            if (result.isConfirmed) {
                var form = $('form[name="SanPhamForm"]');

                form.validate();
                if (!form.valid()) {
                    return;
                }
                else {
                    var data = form.serialize();
                    $.ajax({
                        type: "POST",
                        url: "/Admin/SanPham/SuaSanPham",
                        data: data,
                        dataType: "json",
                        success: function (res) {
                            if (res.error == false) {
                                Swal.fire({
                                    title: 'Thành công!',
                                    text: res.title,
                                    icon: 'success',
                                    customClass: 'swal-wide',
                                }).then((d) => {
                                    if (d.isConfirmed) {
                                        $("#SanPhamModal").modal('hide')
                                        location.reload();
                                    }
                                })
                            }
                            else {
                                Swal.fire({
                                    title: 'Lỗi!',
                                    text: res.title,
                                    icon: 'error',
                                    customClass: 'swal-wide',
                                })
                                return;
                            }
                        }
                    })
                }
            }
        })
    }
</script>