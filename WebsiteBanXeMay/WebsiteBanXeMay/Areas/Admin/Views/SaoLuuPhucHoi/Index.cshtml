@using WebsiteBanXeMay.Utils;
@model PageUtil
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div style="height:100%">
    @*content-wrapper*@
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Sao lưu phục và hồi dữ liệu
        </h1>
        <ol class="breadcrumb">
            <li><i class="fa fa-dashboard"></i> Danh mục</li>
            <li class="active"> Sao lưu phục và hồi dữ liệu</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">Danh sách có: <span style="color:red">@(Model.Data.Count() > 0 ? Model.Data.Count() : 0 )</span>  bản sao lưu</h3>
                        <button title="Thêm" class="btn btn-success" style="float:right!important" onclick="Backup()"><i class="fa fa-database"></i></button>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="tableIDTH" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Bản sao thứ #</th>
                                    <th>Ngày sao lưu</th>
                                    <th>User sao lưu</th>
                                    <th>Phục hồi</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Data.Count() > 0)
                                {
                                    foreach (var obj in Model.PaginatedResult())
                                    {
                                        <tr>
                                            <td>@obj.position</td>

                                            <td>
                                                @obj.backup_start_date.ToString("dd/MM/yyyy hh:mm tt")
                                            </td>
                                            <td>
                                                @obj.description
                                            </td>
                                            <td>
                                                <button title="Phục hồi" class="btn btn-primary" onclick="Restore(@obj.position)"><i class="fa fa-retweet"></i></button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center"><span>Không có dữ liệu</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="box-footer clearfix">
                        <ul class="pagination pagination-sm no-margin pull-right">
                            <li>
                                @Html.ActionLink("Trước", "Index", new { Trang = Model.CurrentPage > 1 ? Model.CurrentPage - 1 : 1 }, null)
                            </li>
                            @for (int page = 1; page <= Model.PageCount(); page++)
                            {
                                <li class="@(page == Model.CurrentPage ? "active" : null)">
                                    @Html.ActionLink(page.ToString(), "Index", new { Trang = page }, null)
                                </li>
                            }
                            <li>
                                @Html.ActionLink("Sau", "Index", new { Trang = Model.CurrentPage < Model.PageCount() ? Model.CurrentPage + 1 : Model.PageCount() }, null)
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<script>
    function Backup() {
        Swal.fire({
            title: 'Xác nhận sao lưu dữ liệu?',
            text: 'Vui lòng chọn chính xác để tiến hành sao lưu dữ liệu',
            input: 'checkbox',
            inputPlaceholder: 'Xóa tất cả các bản sao lưu cũ và sao lưu bản sao lưu mới',
            customClass: 'swal-wide',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            cancelButtonText: 'hủy',
            confirmButtonText: 'Xác nhận',
            allowOutsideClick: false
        }).then((result) => {
            if (result.isConfirmed) {
                var strUrl = "/Admin/SaoLuuPhucHoi/SaoLuu/?flag="
                if (result.value) {
                    strUrl += "true";
                }
                else if (result.value === 0) {
                    strUrl += "false";
                }
                $.ajax({
                    type: "POST",
                    url: strUrl,
                    success: function (res) {
                        if (res.error == false) {
                            Swal.fire({
                                title: 'Thành công!',
                                text: res.title,
                                icon: 'success',
                                customClass: 'swal-wide',
                            }).then((d) => {
                                if (d.isConfirmed) {
                                    location.reload();
                                }
                            })
                        }
                        else {
                            Swal.fire({
                                title: 'Lỗi!',
                                text: res.title,
                                icon: 'error',
                                customClass: 'swal-wide',
                            })
                            return;
                        }
                    }
                })
            }
        })
    }

    function Restore(position) {
        Swal.fire({
            title: 'Xác nhận phục hồi dữ liệu về bản thứ ' + position + ' ?',
            text: 'Vui lòng chọn chính xác để tiến hành phục hồi dữ liệu',
            customClass: 'swal-wide',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            cancelButtonText: 'hủy',
            confirmButtonText: 'Xác nhận',
            allowOutsideClick: false
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    type: "POST",
                    url: "/Admin/SaoLuuPhucHoi/PhuHoi/?position=" + position,
                    success: function (res) {
                        if (res.error == false) {
                            Swal.fire({
                                title: 'Thành công!',
                                text: res.title,
                                icon: 'success',
                                customClass: 'swal-wide',
                            }).then((d) => {
                                if (d.isConfirmed) {
                                    location.reload();
                                }
                            })
                        }
                        else {
                            Swal.fire({
                                title: 'Lỗi!',
                                text: res.title,
                                icon: 'error',
                                customClass: 'swal-wide',
                            })
                            return;
                        }
                    }
                })
            }
        })
    }
</script>