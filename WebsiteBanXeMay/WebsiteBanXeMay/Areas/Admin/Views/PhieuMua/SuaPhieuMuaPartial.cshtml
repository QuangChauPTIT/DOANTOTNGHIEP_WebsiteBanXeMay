@using WebsiteBanXeMay.Models;
@using WebsiteBanXeMay.Areas.Admin.ViewModels;

@{ var lstNhanVienGiaoHang = ViewBag.lstNhanVienGiaoHang as List<NhanVienGiaoHangViewModel>;}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">Duyệt đơn hàng có mã: @ViewBag.MAPM</h4>
</div>
<div class="modal-body">
    <form name="PhieuMuaForm">
        @Html.AntiForgeryToken()
        <div class="row">
            <input value="@ViewBag.MAPM" type="hidden" name="MAPM"/>
            <div class="col-md-12">
                <label>Mã hóa đơn<span class="required">*</span></label>
                <input placeholder="Mã hóa đơn" name="MAHD" class="form-control" value="" type="text">
            </div>
            <div class="col-md-12" style="margin-top:3%">
                <label>Nhân viên giao hàng<span class="required">*</span></label>
                <select class="form-control select2" name="MANVGH" style="width: 100%;">
                    @foreach (var NhanVien in lstNhanVienGiaoHang)
                    {
                        <option value="@NhanVien.MANV">Mã nhân viên: @NhanVien.MANV - Họ tên: @(NhanVien.HO+" "+NhanVien.TEN) - Số phiếu đang giao: @NhanVien.SOPHIEUDANGGIAO - Tổng phiếu: @NhanVien.TONGSOPHIEU</option>
                    }
                </select>
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-danger pull-right" data-dismiss="modal"><i class="fa fa-close" title="Đóng"></i></button>
    <button type="button" class="btn btn-success" onclick="Edit()" style="margin-right:3%!important"><i class="fa fa-save" title="Lưu"></i></button>
</div>



