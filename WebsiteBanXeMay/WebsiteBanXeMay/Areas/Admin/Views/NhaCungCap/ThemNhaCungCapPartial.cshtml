<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">Thêm nhà cung câp</h4>
</div>
<div class="modal-body">
    <form name="NhaCungCapForm">
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-6">
                <label>Mã nhà cung cấp<span class="required">*</span></label>
                <input placeholder="Mã nhà cung cấp" name="MANCC" class="form-control" value="" type="text">
            </div>
            <div class="col-md-6">
                <label>Tên nhà cung cấp<span class="required">*</span></label>
                <input placeholder="Tên nhà cung cấp" name="TENNCC" class="form-control" value="" type="text">
            </div>
            <div class="col-md-6">
                <label>Số điện thoại<span class="required">*</span></label>
                <input placeholder="Số điện thoại" name="SDT" class="form-control" value="" type="text">
            </div>
            <div class="col-md-6">
                <label>Email<span class="required">*</span></label>
                <input placeholder="Email" name="EMAIL" class="form-control" value="" type="text">
            </div>
            <div class="col-md-12">
                <label>Địa chỉ<span class="required">*</span></label>
                <input placeholder="Địa chỉ" name="DIACHI" class="form-control" value="" type="text">
            </div>
        </div>

    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-danger pull-right" data-dismiss="modal"><i class="fa fa-close" title="Đóng"></i></button>
    <button type="button" class="btn btn-success" onclick="ThemNhaCungCap()" style="margin-right:3%!important"><i class="fa fa-save" title="Lưu"></i></button>
</div>



