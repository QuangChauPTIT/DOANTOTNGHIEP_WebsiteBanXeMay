@using WebsiteBanXeMay.Utils;
@model PageUtil

@{
    ViewBag.Title = "BaoCaoDoanhThuTheoLoaiSanPham";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="">
    @*content-wrapper*@
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Doanh thu
        </h1>
        <ol class="breadcrumb">
            <li><i class="fa fa-dashboard"></i> Báo cáo</li>
            <li class="active">Doanh thu</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">
                        <form action="/Admin/BaoCao/BaoCaoDoanhThuTheoLoaiSanPham" method="get">
                            <div class="row">
                                <div class="col-md-4">
                                    <label>Từ ngày</label>
                                    <input type="date" name="NgayBatDau" id="NgayBatDauID" max="@DateTime.Now.ToString("yyyy-MM-dd")" value="@(ViewBag.NgayBatDau != null?ViewBag.NgayBatDau.ToString("yyyy-MM-dd"):null)" class="form-control" />
                                </div>
                                <div class="col-md-4">
                                    <label>Đến ngày</label>
                                    <input type="date" name="NgayKetThuc" id="NgayKetThucID"  max="@DateTime.Now.ToString("yyyy-MM-dd")" value="@(ViewBag.NgayKetThuc != null?ViewBag.NgayKetThuc.ToString("yyyy-MM-dd"):null)" class="form-control" />
                                </div>
                                <div class="col-md-1" style="margin-top:2.3%">
                                    <button title="Thêm" class="btn btn-info" ><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        
                        </form>

                        <h3 style="margin-top:3%" class="box-title">Danh sách loại sản phẩm</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table class="table table-bordered">
                            <tr>
                                <th>STT</th>
                                <th>Mã loại</th>
                                <th>Tên loại</th>
                                <th>Hình ảnh</th>
                                <th>Số lượng đã bán</th>
                                <th>Doanh thu</th>
                            </tr>
                            @if (Model.Data.Count() > 0)
                            {
                                int i = 1;
                                foreach (var LoaiSanPham in Model.PaginatedResult())
                                {
                                    <tr>
                                        <td>@(i++)</td>
                                        <td>@LoaiSanPham.MALOAI</td>

                                        <td>
                                            @LoaiSanPham.TENLOAI
                                        </td>
                                        <td>
                                            <img src="@Url.Content("~/Assets/upload/images/"+LoaiSanPham.HINHANH)" width="100" height="100" alt="@LoaiSanPham.HINHANH ">
                                        </td>
                                        <td>
                                            @LoaiSanPham.SOLUONG
                                        </td>
                                        <td>
                                            <span class="money" style="color:red">@LoaiSanPham.GIA</span>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center"><span>Không có dữ liệu</span></td>
                                </tr>
                            }
                        </table>
                        @if (Model.Data.Count() > 0)
                        {
                            var Tong = 0;
                            foreach (var LoaiSanPham in Model.Data)
                            {
                                Tong += LoaiSanPham.GIA;
                            }
                            <div>
                                <span style="float:right;font-size:16px;padding-right:5%;">Tổng doanh thu:  <span class="money" style="color:red">@Tong</span></span>
                            </div>
                        }
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer clearfix">
                        <ul class="pagination pagination-sm no-margin pull-right">
                            <li>
                                @Html.ActionLink("Trước", "BaoCaoDoanhThuTheoLoaiSanPham", new { Trang = Model.CurrentPage > 1 ? Model.CurrentPage - 1 : 1 }, null)
                            </li>
                            @for (int page = 1; page <= Model.PageCount(); page++)
                            {
                                <li class="@(page == Model.CurrentPage ? "active" : null)">
                                    @Html.ActionLink(page.ToString(), "BaoCaoDoanhThuTheoLoaiSanPham", new { Trang = page }, null)
                                </li>
                            }
                            <li>
                                @Html.ActionLink("Sau", "BaoCaoDoanhThuTheoLoaiSanPham", new { Trang = Model.CurrentPage < Model.PageCount() ? Model.CurrentPage + 1 : Model.PageCount() }, null)
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
