@using WebsiteBanXeMay.Utils;
@model PageUtil
@{
    ViewBag.Title = "BaoCaoTonKhoTheoLoaiSanPham";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="">
    @*content-wrapper*@
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Tồn kho
        </h1>
        <ol class="breadcrumb">
            <li><i class="fa fa-dashboard"></i> Báo cáo</li>
            <li class="active">Tồn kho</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">
                        <form action="/Admin/BaoCao/BaoCaoTonKhoTheoLoaiSanPham" method="get">
                            <div class="row">
                                <div class="col-md-4">
                                    <label>Thông kê tồn kho đến ngày:</label>
                                    <input type="date" name="Ngay" max="@DateTime.Now.ToString("yyyy-MM-dd")" value="@(ViewBag.Ngay != null?ViewBag.Ngay.ToString("yyyy-MM-dd"):null)" class="form-control" />
                                </div>
                                <div class="col-md-1" style="margin-top:2.3%">
                                    <button title="Tìm kiếm" class="btn btn-info"><i class="fa fa-search"></i></button>
                                </div>
                            </div>

                        </form>
                        <a style="float:right!important; margin-top:-3.5%" href="@Url.Action("Export_BaoCaoTonKhoTheoLoaiSanPham",new {  Ngay = ViewBag.Ngay})" title="Xuất pdf" class="btn btn-success"><i class="fa fa-file-pdf-o"></i></a>
                        <h3 style="margin-top:3%" class="box-title">Danh sách có: <span style="color:red">@(Model.Data.Count() > 0 ? Model.Data.Count() : 0 )</span>  loại sản phẩm</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table class="table table-bordered">
                            <tr>
                                <th>STT</th>
                                <th>Mã loại</th>
                                <th>Tên loại</th>
                                <th>Hình ảnh</th>
                                <th>Số lượng tồn kho</th>
                            </tr>
                            @if (Model.Data.Count() > 0)
                            {
                                int i = 1;
                                foreach (var LoaiSanPham in Model.PaginatedResult())
                                {
                                    <tr>
                                        <td>@(i++)</td>
                                        <td>@LoaiSanPham.MALOAI</td>

                                        <td>
                                            @LoaiSanPham.TENLOAI
                                        </td>
                                        <td>
                                            <img src="@Url.Content("~/Assets/upload/images/"+LoaiSanPham.HINHANH)" width="100" height="100" alt="@LoaiSanPham.HINHANH ">
                                        </td>
                                        <td>
                                            @LoaiSanPham.SOLUONG
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center"><span>Không có dữ liệu</span></td>
                                </tr>
                            }
                        </table>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer clearfix">
                        <ul class="pagination pagination-sm no-margin pull-right">
                            <li>
                                @Html.ActionLink("Trước", "BaoCaoTonKhoTheoLoaiSanPham", new {Ngay = ViewBag.Ngay, Trang = Model.CurrentPage > 1 ? Model.CurrentPage - 1 : 1 }, null)
                            </li>
                            @for (int page = 1; page <= Model.PageCount(); page++)
                            {
                                <li class="@(page == Model.CurrentPage ? "active" : null)">
                                    @Html.ActionLink(page.ToString(), "BaoCaoTonKhoTheoLoaiSanPham", new { Ngay = ViewBag.Ngay, Trang = page }, null)
                                </li>
                            }
                            <li>
                                @Html.ActionLink("Sau", "BaoCaoTonKhoTheoLoaiSanPham", new {Ngay = ViewBag.Ngay, Trang = Model.CurrentPage < Model.PageCount() ? Model.CurrentPage + 1 : Model.PageCount() }, null)
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>


