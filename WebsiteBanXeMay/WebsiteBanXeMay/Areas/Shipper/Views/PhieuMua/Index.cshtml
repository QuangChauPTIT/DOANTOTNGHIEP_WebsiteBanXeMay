@using WebsiteBanXeMay.Utils;
@model PageUtil
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Shipper/Views/Shared/_Layout.cshtml";
}
<div class="">
    @*content-wrapper*@
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Đơn hàng
        </h1>
        <ol class="breadcrumb">
            <li><i class="fa fa-dashboard"></i> Danh mục</li>
            <li  class="active">Đơn hàng</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">Danh sách đơn hàng</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table class="table table-bordered">
                            <tr>
                                <th>Mã phiếu mua</th>
                                <th style="width:20%">Thông tin khách hàng</th>
                                <th>Nội dung chú ý</th>
                                <th>Ngày mua</th>
                                <th>Ngày giao</th>
                                <th>Tác vụ</th>
                            </tr>
                            @if (Model.Data.Count() > 0)
                            {
                                foreach (var PhieuMuaViewModel in Model.PaginatedResult())
                                {
                                    <tr>
                                        <td>@PhieuMuaViewModel.MAPM</td>
                                        <td>
                                            <div class="row">
                                                <span class="col-md-12">Họ tên:<span class="text-blue"> @(PhieuMuaViewModel.HO+" "+ @PhieuMuaViewModel.TEN)</span></span>
                                                <span class="col-md-12">Địa chỉ:<span class="text-blue"> @(PhieuMuaViewModel.DIACHI+", "+PhieuMuaViewModel.TENQUAN )</span></span>
                                                <span class="col-md-12">Số điện thoại:<span class="text-blue"> @PhieuMuaViewModel.SDT</span></span>
                                            </div>

                                        </td>
                                        <td>
                                            @PhieuMuaViewModel.NOIDUNGCHUY
                                        </td>
                                        <td>
                                            @PhieuMuaViewModel.NGAYMUA.ToString("dd/MM/yyyy hh:mm tt")
                                        </td>
                                        <td>
                                            @PhieuMuaViewModel.NGAYGIAO.ToString("dd/MM/yyyy hh:mm tt")
                                        </td>
                                        <td>
                                            <button title="Xem chi tiết" class="btn btn-warning" onclick="getChiTietPhieuMua(@PhieuMuaViewModel.MAPM)"><i class="fa fa-info"></i></button>
                                            <button title="Hiệu chỉnh" class="btn btn-primary" onclick="Edit(@PhieuMuaViewModel.MAPM)"><i class="fa fa-edit"></i></button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center"><span>Không có dữ liệu</span></td>
                                </tr>
                            }

                        </table>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer clearfix">
                        <ul class="pagination pagination-sm no-margin pull-right">
                            <li>
                                @Html.ActionLink("Trước", "Index", new { Trang = Model.CurrentPage > 1 ? Model.CurrentPage - 1 : 1 }, null)
                            </li>
                            @for (int page = 1; page <= Model.PageCount(); page++)
                            {
                                <li class="@(page == Model.CurrentPage ? "active" : null)">
                                    @Html.ActionLink(page.ToString(), "Index", new { Trang = page }, null)
                                </li>
                            }
                            <li>
                                @Html.ActionLink("Sau", "Index", new { Trang = Model.CurrentPage < Model.PageCount() ? Model.CurrentPage + 1 : Model.PageCount() }, null)
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

<div class="modal fade" id="PhieuMuaModal" role="dialog" aria-labelledby="PhieuMuaModalLable" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" id="PhieuMuaModalBody">

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
<script>
    function getChiTietPhieuMua(id) {
        $.ajax({
            type: "GET",
            url: "/Shipper/PhieuMua/ChiTietPhieuMuaPartial?MaPM=" + id,
            success: function (res) {
                $("#PhieuMuaModalBody").html(res);
                $("#PhieuMuaModal").modal('show')
            }
        })
    };


    function Edit(id) {
        Swal.fire({
            title: 'Xác nhận đã giao hàng?',
            text: "Khi bấm xác nhận dữ liệu không vi phạm điều kiện sẽ được chỉnh sửa!",
            icon: 'question',
            customClass: 'swal-wide',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            cancelButtonText: 'hủy',
            confirmButtonText: 'Xác nhận',
            allowOutsideClick: false
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    type: "GET",
                    url: "/Shipper/PhieuMua/SuaPhieuMua/?MaPM=" + id,
                    success: function (res) {
                        if (res.error == false) {
                            Swal.fire({
                                title: 'Thành công!',
                                text: res.title,
                                icon: 'success',
                                customClass: 'swal-wide',
                            }).then((d) => {
                                if (d.isConfirmed) {
                                    location.reload();
                                }
                            })
                        }
                        else {
                            Swal.fire({
                                title: 'Lỗi!',
                                text: res.title,
                                icon: 'error',
                                customClass: 'swal-wide',
                            })
                            return;
                        }
                    }
                })
            }
        })
    }
</script>
