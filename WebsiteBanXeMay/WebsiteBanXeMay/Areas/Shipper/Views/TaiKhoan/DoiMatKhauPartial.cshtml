
@using WebsiteBanXeMay.ViewModels;

@model DoiMatKhauViewModel
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">Tài khoản: @ViewBag.Email</h4>
</div>
<div class="modal-body">
    <form name="TaiKhoan_Form">
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-12">
                <label>Mật khẩu cũ<span class="required">*</span></label>
                <input placeholder="Mật khẩu cũ" name="OLD_PASSWORD" class="form-control" type="password">
            </div>
            <div class="col-md-12" style="margin-top:2%">
                <label>Mật khẩu mới<span class="required">*</span></label>
                <input placeholder="Mật khẩu mới" name="NEW_PASSWORD" class="form-control" type="password">
            </div>
            <div class="col-md-12" style="margin-top:2%">
                <label>Nhập lại mật khẩu<span class="required">*</span></label>
                <input placeholder="Nhập lại mật khẩu" name="CONFIRM_PASSWORD" class="form-control" type="password">
            </div>
        </div>

    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-danger pull-right" data-dismiss="modal"><i class="fa fa-close" title="Đóng"></i></button>
    <button type="button" class="btn btn-success" onclick="DoiMatKhau()" style="margin-right:3%!important"><i class="fa fa-save" title="Lưu"></i></button>
</div>




