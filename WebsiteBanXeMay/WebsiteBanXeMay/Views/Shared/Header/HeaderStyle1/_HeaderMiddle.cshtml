@using WebsiteBanXeMay.Common;


<div class="header-middle pl-sm-0 pr-sm-0 pl-xs-0 pr-xs-0">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="logo pb-sm-30 pb-xs-30">
                    <a href="/">
                        <img src="~/Assets/Client/images/menu/logo/1.jpg" alt="">
                    </a>
                </div>
            </div>
            <div class="col-lg-9 pl-0 ml-sm-15 ml-xs-15">
                @using (Html.BeginForm("Index", "LoaiSanPham",new {Trang = 1 }, FormMethod.Get, new { @class = "hm-searchbox" }))
                {
                    <input type="text" id="txtTenLoaiSanPham" value="" name="TenLoaiSanPham" autocomplete="off" placeholder="Tìm sản phẩm bạn mong muốn ...">
                    <button class="li-btn" type="submit"><i class="fa fa-search"></i></button>
                }
                <div class="header-middle-right">
                   @Html.Action("GioHangPartial", "GioHang")
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $("#txtTenLoaiSanPham").autocomplete({
            source: '/TrangChu/lstTenLoaiSanPham'
        });
    });
    $('.hm-searchbox').submit(function (e) {
        var data = $('#txtTenLoaiSanPham').val();
        if (data == "" || data == null) {
            e.preventDefault();
        }
    });
</script>