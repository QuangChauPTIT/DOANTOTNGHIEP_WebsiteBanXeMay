@using WebsiteBanXeMay.Utils;
@model PageUtil

<div class="breadcrumb-area">
    <div class="container">
        <div class="breadcrumb-content">
            <ul>
                <li><a href="/TrangChu">Trang chủ</a></li>
                <li class="active">Sản phẩm khuyến mãi</li>
            </ul>
        </div>
    </div>
</div>
<div class="body-wrapper">
    <div class="content-wraper pt-30 pb-60">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="li-section-title">
                        <h2>
                            <span> Tất cả sản phẩm khuyến mãi</span>
                        </h2>
                    </div>
                    <div class="shop-products-wrapper">
                        <div class="product-area shop-product-area">
                            <div class="row">
                                @foreach (var LoaiSanPham in Model.PaginatedResult())
                                {
                                    <div style="width:235px;margin:10px 2px 40px">
                                        <div class="single-product-wrap">
                                            <div class="product-image">
                                                <a href="/LoaiSanPham/ChiTietLoaiSanPham/@LoaiSanPham.MALOAI">
                                                    <img src=@Url.Content("~/Assets/upload/images/" + LoaiSanPham.HINHANH) height="170" width="180" alt="@LoaiSanPham.HINHANH">
                                                </a>
                                                @if (LoaiSanPham.TRANGTHAI == 0)
                                                {
                                                    <span class="sticker">Mới</span>
                                                }
                                            </div>
                                            <div class="product_desc">
                                                <div class="product_desc_info">
                                                    <div class="product-review">
                                                        <h5 class="manufacturer">
                                                            <a href="">@LoaiSanPham.TENTH</a>
                                                        </h5>
                                                        <div class="rating-box">
                                                            <ul class="rating">
                                                                @for (int i = 0; i < LoaiSanPham.MUCDANHGIA; i++)
                                                                {
                                                                    <li><i class="fa fa-star"></i></li>
                                                                }
                                                                @for (int i = 0; i < 5 - LoaiSanPham.MUCDANHGIA; i++)
                                                                {
                                                                    <li class="no-star"><i class="fa fa-star"></i></li>
                                                                }
                                                            </ul>
                                                        </div>
                                                    </div>
                                                    <h4>
                                                        <a class="product_name" href="/LoaiSanPham/ChiTietLoaiSanPham/@LoaiSanPham.MALOAI">
                                                            @LoaiSanPham.TENLOAI
                                                        </a>
                                                    </h4>
                                                    <div class="price-box">
                                                        @if (LoaiSanPham.PHANTRAM > 0)
                                                        {
                                                            <span class="new-price new-price-2 money">
                                                                @LoaiSanPham.GIAKM
                                                            </span>
                                                            <span class="old-price money">
                                                                @LoaiSanPham.GIA
                                                            </span>
                                                            <span class="discount-percentage">@LoaiSanPham.PHANTRAM %</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="new-price new-price-2 money">
                                                                @LoaiSanPham.GIA
                                                            </span>
                                                        }
                                                    </div>
                                                </div>
                                                <div class="add-actions">
                                                    <ul class="add-actions-link">
                                                        <li class="add-cart active">
                                                            @Ajax.ActionLink("Thêm vào giỏ",
                                                                           "ThemGioHang",
                                                                           "GioHang",
                                                                           new { MaLoai = LoaiSanPham.MALOAI, SoLuong = 1 },
                                                                           new AjaxOptions
                                                                           {
                                                                               HttpMethod = "POST",
                                                                               InsertionMode = InsertionMode.Replace,
                                                                               UpdateTargetId = "GioHangID",
                                                                               OnFailure = "OnFailure"
                                                                           }, null)
                                                        </li>
                                                        <li><a href="/LoaiSanPham/ChiTietLoaiSanPham/@LoaiSanPham.MALOAI" title="Chi tiết loại sản phẩm" class="quick-view-btn"><i class="fa fa-eye"></i></a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="paginatoin-area mt-65">
                                <div class="row">
                                    <div class="col-lg-12 col-md-12">
                                        <ul class="pagination-box">
                                            <li>
                                                @Html.ActionLink("Trước", "LoaiSanPhamKhuyenMai", new { Trang = Model.CurrentPage > 1 ? Model.CurrentPage - 1 : 1 }, null)
                                            </li>
                                            @for (int page = 1; page <= Model.PageCount(); page++)
                                            {
                                                <li class="@(page == Model.CurrentPage ? "CurrentPage active" : null)">
                                                    @Html.ActionLink(page.ToString(), "LoaiSanPhamKhuyenMai", new { Trang = page }, null)
                                                </li>
                                            }
                                            <li>
                                                @Html.ActionLink("Sau", "LoaiSanPhamKhuyenMai", new { Trang = Model.CurrentPage < Model.PageCount() ? Model.CurrentPage + 1 : Model.PageCount() }, null)
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

