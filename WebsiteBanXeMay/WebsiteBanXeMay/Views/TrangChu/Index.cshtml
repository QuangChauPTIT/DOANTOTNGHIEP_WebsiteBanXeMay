@if (lstLoaiSanPhamKhuyenMai != null && lstLoaiSanPhamKhuyenMai.Count() > 0)
{
    <section class="product-area li-laptop-product pt-40 pb-45">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="li-section-title">
                        <h2>
                            <span>Sản phẩm khuyến mãi</span>
                        </h2>
                        <ul class="li-sub-category-list">
                            @if (lstLoaiSanPhamKhuyenMai.Count() > 1)
                            {
                                <li><a href="/TrangChu/LoaiSanPhamKhuyenMai?Trang=1">Xem tất cả @lstLoaiSanPhamKhuyenMai.Count() xe máy >></a></li>
                            }
                        </ul>
                    </div>
                    <div class="row">
                        <div class="product-active owl-carousel">
                            @Html.Partial("Top10LoaiSanPhamPartial", lstLoaiSanPhamKhuyenMai.Take(10))
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
else
{
    <script>
        $(function () {
            $('#lstLoaiSanPhamMoi').addClass('pt-60');
        });
    </script>
}

@if (lstLoaiSanPhamMoi != null && lstLoaiSanPhamMoi.Count() > 0)
{
    <section id="lstLoaiSanPhamMoi" class="product-area li-laptop-product pb-45">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="li-section-title">
                        <h2>
                            <span>Sản phẩm mới</span>
                        </h2>
                        <ul class="li-sub-category-list">
                            @if (lstLoaiSanPhamMoi.Count() > 1)
                            {
                                <li><a href="/TrangChu/LoaiSanPhamMoi?Trang=1">Xem tất cả @lstLoaiSanPhamMoi.Count() xe máy >></a></li>
                            }
                        </ul>
                    </div>
                    <div class="row">
                        <div class="product-active owl-carousel">
                            @Html.Partial("Top10LoaiSanPhamPartial", lstLoaiSanPhamMoi)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

@if (lstLoaiSanPhamBanChay != null && lstLoaiSanPhamBanChay.Count() > 0)
{
    <section id="lstLoaiSanPhamBanChay" class="product-area li-laptop-product pb-45">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="li-section-title">
                        <h2>
                            <span>Sản phẩm bán chạy</span>
                        </h2>
                        <ul class="li-sub-category-list">
                            @if (lstLoaiSanPhamBanChay.Count() > 1)
                            {
                                <li><a href="/TrangChu/LoaiSanPhamBanChay?Trang=1">Xem tất cả @lstLoaiSanPhamBanChay.Count() xe máy >></a></li>
                            }
                        </ul>
                    </div>
                    <div class="row">
                        <div class="product-active owl-carousel">
                            @Html.Partial("Top10LoaiSanPhamPartial", lstLoaiSanPhamBanChay)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
else
{
    <script>
        $(function () {
            $('#lstLoaiSanPhamBanChay').addClass('pt-40');
        });
    </script>
}