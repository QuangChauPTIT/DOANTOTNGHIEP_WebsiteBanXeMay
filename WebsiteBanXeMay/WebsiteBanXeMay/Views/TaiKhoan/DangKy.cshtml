@using WebsiteBanXeMay.ViewModels;

@model KhachHangViewModel
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-section mb-60">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12 col-xs-12">
                @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="login-form col-sm-6" style="margin:auto">
                        <h4 class="login-title text-center">Đăng ký</h4>
                        <div class="row">
                            <div class="col-md-6 col-12 mb-20">
                                <label>Họ</label>
                                <input class="mb-0" type="text" name="KHACHHANG.HO" placeholder="Họ">
                                @Html.ValidationMessageFor(model => model.KHACHHANG.HO, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6 col-12 mb-20">
                                <label>Tên</label>
                                <input class="mb-0" type="text" name="KHACHHANG.TEN" placeholder="Tên">
                                @Html.ValidationMessageFor(model => model.KHACHHANG.TEN, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6 mb-20">
                                <label>Giới tính</label>
                                <div class="row col-md-12">
                                    <div class="col-md-6">
                                        <div class="row">
                                            <input class="mb-0" style="width:15%" type="radio" name="KHACHHANG.GIOITINH" checked value="false">
                                            <label class="mt-15 ml-5">Nam</label>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="row">
                                            <input class="mb-0" style="width:15%" type="radio" name="KHACHHANG.GIOITINH" value="true">
                                            <label class="mt-15 ml-5">Nữ</label>
                                        </div>
                                    </div>
                                </div>
                                @Html.ValidationMessageFor(model => model.KHACHHANG.GIOITINH, "", new { @class = "text-danger" })

                            </div>
                            <div class="col-md-6 mb-20">
                                <label>Ngày sinh</label>
                                <input class="mb-0" type="date" name="KHACHHANG.NGAYSINH" placeholder="Ngày sinh">
                                @Html.ValidationMessageFor(model => model.KHACHHANG.NGAYSINH, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-12 mb-20">
                                <label>Địa chỉ</label>
                                <input class="mb-0" type="text" name="KHACHHANG.DIACHI" placeholder="Địa chỉ">
                                @Html.ValidationMessageFor(model => model.KHACHHANG.DIACHI, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6 mb-20">
                                <label>Số điện thoại</label>
                                <input class="mb-0" type="text" name="KHACHHANG.SDT" placeholder="Số điện thoại">
                                @Html.ValidationMessageFor(model => model.KHACHHANG.SDT, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6 mb-20">
                                <label>Email</label>
                                <input class="mb-0" type="text" name="TAIKHOAN.EMAIL" placeholder="Email là tài khoản đăng nhập">
                                @Html.ValidationMessageFor(model => model.TAIKHOAN.EMAIL, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6 mb-20">
                                <label>Mật khẩu</label>
                                <input class="mb-0" type="text" name="TAIKHOAN.PASSWORD" placeholder="Mật khẩu">
                                @Html.ValidationMessageFor(model => model.TAIKHOAN.PASSWORD, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6 mb-20">
                                <label>Nhập lại mật khẩu</label>
                                <input class="mb-0" type="text" name="PASSWORD_CONFIRM" placeholder="Nhập lại mật khẩu">
                                @Html.ValidationMessageFor(model => model.PASSWORD_CONFIRM, "", new { @class = "text-danger" })
                            </div>
                            @Html.ValidationMessage("error", new { @class = "text-danger col-md-12 text-center" })
                            <div class="col-12">
                                <button class="register-button mt-0">Đăng ký</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
